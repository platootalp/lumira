FROM node:20-slim

WORKDIR /app

# Install OpenSSL (required by Prisma)
RUN apt-get update -y && apt-get install -y openssl ca-certificates && rm -rf /var/lib/apt/lists/*

# Copy pre-built artifacts from host
COPY lumira-backend/package*.json ./
COPY lumira-backend/dist ./dist
COPY lumira-backend/prisma ./prisma
COPY lumira-backend/node_modules ./node_modules

EXPOSE 3001

CMD ["npm", "start"]
