# =============================================================================
# Lumira - Environment Variables Template
# =============================================================================
# Copy this file to .env.local for local development
# DO NOT commit .env.local or any file with actual secrets to git
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Application name (displayed in UI)
NEXT_PUBLIC_APP_NAME=Lumira

# Application version
NEXT_PUBLIC_APP_VERSION=0.1.0

# Environment (development, staging, production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# Base URL for API requests (leave empty for same-origin)
# NEXT_PUBLIC_API_URL=http://localhost:3000

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable/disable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------

# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# -----------------------------------------------------------------------------
# Vercel Deployment (CI/CD)
# -----------------------------------------------------------------------------
# These are set in GitHub Secrets, not in .env files

# Vercel Token for CLI authentication
# VERCEL_TOKEN=your_vercel_token_here

# Vercel Organization ID
# VERCEL_ORG_ID=your_org_id_here

# Vercel Project ID
# VERCEL_PROJECT_ID=your_project_id_here

# -----------------------------------------------------------------------------
# Database (IndexedDB - Client-side only, no server DB needed)
# -----------------------------------------------------------------------------

# IndexedDB database name
NEXT_PUBLIC_DB_NAME=lumira_db

# IndexedDB version (increment when schema changes)
NEXT_PUBLIC_DB_VERSION=1

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------

# Fund estimate cache TTL in seconds
NEXT_PUBLIC_ESTIMATE_CACHE_TTL=30

# Fund search cache TTL in seconds
NEXT_PUBLIC_SEARCH_CACHE_TTL=300

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------

# Enable bundle analyzer (set to true to analyze bundle size)
# ANALYZE=true

# -----------------------------------------------------------------------------
# Development Only
# -----------------------------------------------------------------------------

# Enable React Strict Mode
NEXT_PUBLIC_STRICT_MODE=true

# Mock API responses for development
NEXT_PUBLIC_MOCK_API=false
